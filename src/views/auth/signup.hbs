<div class="container p-5">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Crear Usuario</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
            <div class="form-group">
              <input type="type" name="fullname" placeholder="Primer nombre" class="form-control" >
            </div>
            <div class="form-group">
              <input type="type" name="fullname" placeholder="Segundo nombre" class="form-control" >
            </div>
            <div class="form-group">
              <input type="type" name="fullname" placeholder="Primer apellido" class="form-control" >
            </div>
            <div class="form-group">
              <input type="type" name="fullname" placeholder="" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="username" placeholder="Usuario" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
            <div class="form-group">
              <input type="checkbox" value="" id="checkbox1" name="checkbox1 class="form-control">
               <label>"Acepar terminos y condiciones"</label>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Crear
